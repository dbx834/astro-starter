---
const { crumbs = [] } = Astro.props || {};
---

<p id="breadcrumbs" aria-label="Breadcrumb">
  {
    crumbs.slice(0, -1).map((c, i) => (
      <span class="crumb">
        {i > 0 && <span aria-hidden="true">&nbsp;»&nbsp;</span>}
        <a href={c.url}>{c.name}</a>
      </span>
    ))
  }
  <span aria-hidden="true">&nbsp;»&nbsp;</span>
</p>
